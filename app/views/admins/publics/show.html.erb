<div class="row">
  <div class="col-xs-5 col-xs-offset-1">
<h1 class="page-title pick-up-title">
  <%= @public.last_name %>
  <%= @public.first_name %>
  さんの会員詳細
</h1>

<table class="table">
  <tr>
    <td class="table-left">会員ID</td>
    <td><%= @public.id %></td>
    <td>
      <% if @public.is_deleted == false %>
          有効会員
        <% else %>
          退会済会員
        <% end %>
    </td>
  </tr>
  <tr>
    <td class="table-left">氏名</td>
    <td><%= @public.last_name %> <%= @public.first_name %></td>
    <td>
  </tr>
  <tr>
    <td class="table-left">フリガナ</td>
    <td><%= @public.last_name_kana %> <%= @public.first_name_kana %></td>
  </tr>
  <tr>
    <td class="table-left">郵便番号</td>
    <td><%= @public.postcode %></td>
  </tr>
  <tr>
    <td class="table-left">住所</td>
    <td><%= @public.address %></td>
  </tr>
  <tr>
    <td class="table-left">電話番号</td>
    <td><%= @public.tel %></td>
  </tr>
  <tr>
    <td class="table-left">メールアドレス</td>
    <td><%= @public.email %></td>
  </tr>
</table>

<span class="link-hover"><%= link_to "編集する", edit_admins_public_path(@public), class: "btn" %></span>
<span class="link-hover"><%= link_to "注文履歴一覧を見る",admins_orders_path(@public), class: "btn"  %></span>
</div>
</div>
