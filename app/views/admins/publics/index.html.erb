<div class="row">
  <div class="col-xs-5 col-xs-offset-1">
<h1 class="page-title">会員一覧</h1>
<table class="table box-top">
  <thead>
    <tr class="table-top">
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody class="table-hover">
    <% @publics.each do |public| %>
    <tr>
      <td><%= public.id %></td>
      <td class="btn-hover">
        <%= link_to admins_public_path(public), class: "border" do %>
          <%= public.last_name %>
          <%= public.first_name %>
        <% end %>
      </td>
      <td><%= public.email %></td>
      <td>
        <% if public.is_deleted == false %>
          有効
        <% else %>
          退会済
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @publics %>
</div>
</div>
