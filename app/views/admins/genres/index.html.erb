<h1>ジャンル一覧・追加</h1>

<%= form_for(@genre, url: admins_genres_path) do |f| %>
  <label>ジャンル</label>
  	<%= f.text_field :name %>
    <%= f.radio_button :is_active, 1,{:checked => true} %>
    <%= f.label 0,"有効" %>
    <%= f.radio_button :is_active, 0 %>
    <%= f.label 1,"無効" %>
  <%= f.submit "追加" %>
<% end %>

  <table>
  	<thead>
  	  <tr>
  	    <td>ジャンル</td>
  	    <td>状態</td>
  	    <td></td>
  	  </tr>
  	</thead>
  	<tbody>
  		<% @genres.each do |genre| %>
  		  <tr>
  		  	<td><%= genre.name %></td>
  		  	<td><%= genre.is_active %></td>
  		  </tr>
  		<% end %>
  	</tbody>
  </table>
