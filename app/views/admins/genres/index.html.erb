<h1>ジャンル一覧・追加</h1>
  <%= render 'admins/genres/post_genre',genre: @genre, path: admins_genres_path(@genre) %>

  <table>
  	<thead>
  	  <tr>
  	    <th>ジャンル</th>
  	    <th>状態</th>
  	    <th></th>
  	  </tr>
  	</thead>
  	<tbody>
  		<% @genres.each do |genre| %>
  		  <tr>
  		  	<td><%= genre.name %></td>
  		  	<td>
            <% if genre.is_active == true %>
              有効
            <% else %>
              無効
            <% end %>
          </td>
          <td><%= link_to "Edit",edit_admins_genre_path(genre) %></td>
  		  </tr>
  		<% end %>
  	</tbody>
  </table>

