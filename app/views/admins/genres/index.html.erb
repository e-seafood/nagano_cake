
<div class="row">
  <div class="col-xs-5 col-xs-offset-1">
	<h1 class="page-title pick-up-title">ジャンル一覧・追加</h1>
	  <%= render 'admins/genres/post_genre',genre: @genre, path: admins_genres_path(@genre) %>
  	<table class="table box-top">
	  <thead>
	    <tr class="table-top">
	      <th>ジャンル</th>
	      <th>状態</th>
	      <th></th>
	    </tr>
	  </thead>
	  <tbody>
	 	<% @genres.each do |genre| %>
		  <tr>
		  	<td><%= genre.name %></td>
		  	<td>
          <% if genre.is_active == true %>
            有効
          <% else %>
            無効
          <% end %>
        </td>
        <td class="btn-hover"><%= link_to "編集する",edit_admins_genre_path(genre),class: "border btn-hover" %></td>
		  </tr>
		<% end %>
	  </tbody>
    </table>
    <%= paginate @genres %>
  </div>
</div>

