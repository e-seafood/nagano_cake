<h1>ジャンル一覧・追加</h1>

<%= form_for(@genre, url: admins_genres_path) do |f| %>
  <%= f.label :genre, "ジャンル" %>
  	<%= f.text_field :name %>
<!-- ラジオボタン -->
    <%= f.radio_button :is_active, :ture,{:checked => true} %>
    <%= f.label 0,"有効" %>
    <%= f.radio_button :is_active, :false %>
    <%= f.label 1,"無効" %>
  <%= f.submit "追加" %>
<% end %>

  <table>
  	<thead>
  	  <tr>
  	    <th>ジャンル</th>
  	    <th>状態</th>
  	    <th></th>
  	  </tr>
  	</thead>
  	<tbody>
  		<% @genres.each do |genre| %>
  		  <tr>
  		  	<td><%= genre.name %></td>
  		  	<td>
            <% if genre.is_active == true %>
              <span>有効</span>
            <% else %>
              <span>無効</span>
            <% end %>
          </td>
  		  </tr>
  		<% end %>
  	</tbody>
  </table>

