<h3>商品詳細</h3>
<%= attachment_image_tag @item, :image, size: "100x100" %>
<table>
  <thead>
    <tr>
      <td>商品ID</td>
      <td>商品名</td>
      <td>税抜価格</td>
      <td>ジャンル</td>
      <td>ステータス</td>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @item.id %></td>
      <td><%= @item.name %></td>
      <td><%= @item.non_taxed_price %></td>
      <td><%= @item.genre.name %></td>
      <td>
        <% if @item.is_active == true %>
          <p>販売中</p>
        <% else %>
          <p>売切れ</p>
        <% end %>
      </td>
    </tr>
  </tbody>
</table>
<%= link_to "編集する", edit_admins_item_path %>