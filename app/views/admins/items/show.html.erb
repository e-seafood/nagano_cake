<div class="item-show row">
  <div class="col-xs-10 col-xs-offset-2">
    <h3>商品詳細</h3>
    <div class="col-xs-4">
      <%= attachment_image_tag @item, :image, size: '330x230' %>
    </div>
    <div class="col-xs-5">
      <table class="table" id="table-borderless">
        <tr>
          <td>商品名</td>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= @item.explanation %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <td>税込価格（税抜価格）</td>
          <td><%= tax(@item.non_taxed_price).to_s(:delimited) %>（<%= @item.non_taxed_price.to_s(:delimited) %>）円</td>
        </tr>
        <tr>
          <td>ステータス</td>
          <td>
            <% if @item.is_active == true %>
              <p>販売中</p>
            <% else %>
              <p>売切れ</p>
            <% end %>
          </td>
        </tr>
      </table>
      <%= link_to "編集する", edit_admins_item_path, class: "btn btn-primary pull-right" %>
    </div>
  </div>
</div>