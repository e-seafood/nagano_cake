<div class="row">
  <h4>商品詳細</h4>
  <div class="col-xs-2 col-xs-offset-2">
    <%= attachment_image_tag @item, :image, :fill, 200, 150 %>
  </div>
  <div class="col-xs-5">
    <table>
      <tr>
        <td class="col-xs-5">商品名</td>
        <td><%= @item.name %></td>
      </tr>
      <tr>
        <td class="col-xs-5">商品説明</td>
        <td><%= @item.explanation %></td>
      </tr>
      <tr>
        <td class="col-xs-5">ジャンル</td>
        <td><%= @item.genre.name %></td>
      </tr>
      <tr>
        <td class="col-xs-5">税込価格（税抜価格）</td>
        <td><%= tax(@item.non_taxed_price) %>（<%= @item.non_taxed_price %>）円</td>
        <td>
      </tr>
      <tr>
        <td class="col-xs-5">販売ステータス</td>
        <td>
          <% if @item.is_active == true %>
            <p>販売中</p>
          <% else %>
            <p>売切れ</p>
          <% end %>
        </td>
      </tr>
    </table>
    <%= link_to "編集する", edit_admins_item_path, class:"btn btn-primary pull-right" %>
  </div>
</div>