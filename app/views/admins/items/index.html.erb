<div class="item-index row">
  <div class="col-xs-10 col-xs-offset-1">
    <h3>商品一覧</h3>
    <%= link_to "+", new_admins_item_path, class: "btn btn-default pull-right", id: "btn-circle" %>
    <table class="table">
      <thead>
        <tr class="active">
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody class="table-hover">
        <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td class="btn-hover">
              <%= link_to admins_item_path(item), class:"border" do %>
                <%= item.name %>
              <% end %>
            </td>
            <td><%= item.non_taxed_price.to_s(:delimited) %></td>
            <td><%= item.genre.name %></td>
            <td>
              <% if item.is_active == true %>
                販売中
              <% else %>
                売切れ
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @items %>
  </div>
</div>