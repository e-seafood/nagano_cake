<div class="row">
  <div class="col-xs-8 col-xs-offset-2">
    <h4>商品一覧</h4>
    <%= link_to "+", new_admins_item_path, class:"btn btn-default pull-right" %>
    <table class="table">
      <thead>
        <tr class="active">
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td>
              <%= link_to admins_item_path(item) do %>
                <%= item.name %>
              <% end %>
            </td>
            <td><%= item.non_taxed_price %></td>
            <td><%= item.genre.name %></td>
            <td>
              <% if item.is_active == true %>
                販売中
              <% else %>
                売切れ
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>