<div class="row" >
  <div class="col-xs-9 col-xs-offset-1">
	<h1>注文履歴詳細</h1>
	  <table>
	  	<tr>
	  	  <th>購入者</th>
	  	  <td><%= @order.public.last_name %> <%= @order.public.first_name %></td>
	  	</tr>
	  	<tr>
	  	  <th>配送先</th>
	  	  <td>〒<%= @order.postcode %>　<%= @order.address %>　<%= @order.name %></td>
	  	</tr>
	  	<tr>
	  	  <th>支払方法</th>
	  	  <td><%= @order.payment %></td>
	  	</tr>
	  		<th>注文ステータス</th>
	  		<td><%= @order.status %></td>
	  	</tr>
	  </table>
  </div>
</div>
<div class="row">
  <div class="col-xs-7 col-xs-offset-1">
  <table class="table table-borderless">
  	<thead>
  	  <tr class="active">
  	  	<th>商品名</th>
  	  	<th>単価（税込）</th>
  	  	<th>数量</th>
  	  	<th>小計</th>
  	  	<th>製作ステータス</th>
  	  	<th colspan="2"></th>
  	  </tr>
  	</thead>
  	<tbody>
  	  <% @order.order_items.each do |order_item| %>
  	    <tr>
  	  	  <td><%= order_item.item.name %></td>
  	  	  <td><%= tax(order_item.item.non_taxed_price) %></td>
  	  	  <td><%= order_item.item_count %></td>
  	  	  <td><%= amount(tax(order_item.item.non_taxed_price),order_item.item_count) %></td>
  	  	  <td><%= order_item.making_status %></td>
  	    </tr>
  	  <% end %>
  	</tbody>
  </table>
</div>

