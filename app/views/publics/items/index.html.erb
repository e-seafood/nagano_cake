<div class="row">
  <div class="col-xs-2">
    <%= render "genre_search", genres:@genres, items: @items %>
  </div>
  <div class="col-xs-8">
    <% if params[:id] %>
      <h3><%= @genre.name %>一覧（全<%= @items.count %>件）</h3>
    <% else %>
      <h3>商品一覧（全<%= @items.count %>件）</h3>
    <% end %>
    <% @items.each do |item| %>
      <div class="col-xs-3">
        <%= link_to item_path(item) do %>
        <%= attachment_image_tag item, :image, :fill, 150, 100 %>
        <% end %>
      <p><strong><%= item.name %></strong></p>
      <p><strong>￥<%= tax(item.non_taxed_price).to_s(:delimited) %></strong></p>
      </div>
    <% end %>
  </div>
</div>
<%= paginate @items %>