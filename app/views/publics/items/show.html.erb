<div class="row">
  <div class="genre-search col-xs-2">
    <%= render "genre_search", genres:@genres, items: @items %>
  </div>
  <div class="item-box col-xs-8 col-xs-offset-1">
    <div class="col-xs-6">
      <%= attachment_image_tag @item, :image, :fill, 350, 250 %>
    </div>
    <div class="item-detail col-xs-5">
      <h3 class="item-name"><%= @item.name %></h3>
      <p><%= @item.explanation %></p>
      <div class="item-price">
        ¥<%= tax(@item.non_taxed_price).to_s(:delimited) %>（税込）
      </div>
      <%= form_for(@cart, url: carts_path) do |f| %>
        <%= f.hidden_field :item_id, :value => @item.id %>
        <%= f.select :item_count, options_for_select((1..9).to_a), include_blank: "個数選択" %>
        <%= f.submit "カートに入れる", class: "btn btn-primary pull-right" %>
      <% end %>
    </div>
  </div>
</div>