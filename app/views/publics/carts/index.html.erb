<h3>ショッピングカート</h3>
<%= link_to "カートを空にする", cart_destroy_all_path(@carts), method: :delete, data: {confirm: "カートを空にします。本当に削除してもよろしいですか？"} %>
<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @carts.each do |cart| %>
      <tr>
        <td><%= cart.item.name %></td>
        <td><%= tax(cart.item.non_taxed_price) %></td>
        <td>
          <%= form_for(cart, url:cart_path(cart)) do |f| %>
            <%= f.text_field :item_count, :value => cart.item_count %>
            <%= f.submit "変更" %>
          <% end %>
        </td>
        <td><%= cart.item_count*tax(cart.item.non_taxed_price) %></td>
        <td>
          <%= link_to "削除", cart_path(cart), method: :delete, data: {confirm: "#{cart.item.name}を削除します。本当に削除してもよろしいですか？"} %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "買い物を続ける", items_path %>
<table>
  <tr>
    <th>合計金額</th>
    <td></td>
  </tr>
</table>
<%= link_to "情報入力に進む", carts_path %>