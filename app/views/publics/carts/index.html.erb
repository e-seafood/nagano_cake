<h3>ショッピングカート</h3>
<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @carts.each do |cart| %>
      <tr>
        <td><%= cart.item.name %></td>
        <td><%= tax(cart.item.non_taxed_price) %></td>
        <td>
          <%= form_for(@cart, url: carts_path) do |f| %>
            <%= f.select :item_count, options_for_select((1..9).to_a), include_blank: cart.item_count %>
        </td>
        <td><%= cart.item_count*tax(cart.item.non_taxed_price) %></td>
        <td>
          <%= link_to "削除", cart_path(@cart), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"} %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "買い物を続ける", items_path %>
<table>
  <tr>
    <th>合計金額</th>
    <td></td>
  </tr>
</table>
<%= link_to "情報入力に進む", carts_path %>