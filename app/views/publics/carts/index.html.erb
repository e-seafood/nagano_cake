<div class="cart-all row">
  <div class="col-xs-10 col-xs-offset-1">
    <h3>ショッピングカート</h3>
    <%= alert %>
    <div>
      <% if @carts.present? %>
        <%= link_to "カートを空にする", cart_destroy_all_path(@carts), method: :delete, data: {confirm: "カートを空にしてよろしいですか？"}, class: "btn btn-danger pull-right" %>
      <% end %>
    </div>
    <div class="cart-index">
      <table class="table table-bordered">
        <thead>
          <tr class="active">
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @carts.each do |cart| %>
            <tr>
              <td>
                <%= attachment_image_tag cart.item, :image, :fill, 80, 50 %>
                <%= cart.item.name %>
              </td>
              <td class="td_vertical_align_middle">
                <%= tax(cart.item.non_taxed_price).to_s(:delimited) %>
              </td>
              <td class="td_vertical_align_middle">
                <%= form_for(cart, url:cart_path(cart)) do |f| %>
                  <%= f.number_field :item_count, :value => cart.item_count %>
                  <%= f.submit "変更", class: "btn btn-primary" %>
                <% end %>
              </td>
              <td class="td_vertical_align_middle">
                <%= sub_total(cart).to_s(:delimited) %>
              </td>
              <td class="td_vertical_align_middle">
                <%= link_to "削除する", cart_path(cart), method: :delete, data: {confirm: "#{cart.item.name}を削除します。本当に削除してよろしいですか？"}, class: "btn btn-danger" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <%= link_to "買い物を続ける", root_path, class: "btn btn-primary" %>
  </div>
</div>
<div class="row">
  <div class="col-xs-3 col-xs-offset-8">
    <table class="table table-bordered">
      <tr>
        <th class="active">合計金額</th>
        <td><%= items_total(@carts).to_s(:delimited) %></td>
      </tr>
    </table>
  </div>
</div>
<div class="row">
  <div class="col-xs-2 col-xs-offset-5">
    <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success" %>
  </div>
</div>
