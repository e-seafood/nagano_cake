<h1>ショッピングカート</h1>
<%= link_to "カートを空にする", cart_destroy_all_path(@carts), method: :delete, data: {confirm: "カートを空にします。本当に削除してもよろしいですか？"}, class: "btn btn-danger" %>
<table class="table">
  <thead>
    <tr class="active">
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @carts.each do |cart| %>
      <tr>
        <td>
          <%= attachment_image_tag cart.item, :image, :fill, 80, 50 %>
          <%= cart.item.name %>
        </td>
        <td><%= tax(cart.item.non_taxed_price) %></td>
        <td>
          <%= form_for(cart, url:cart_path(cart)) do |f| %>
            <% if cart.errors.any? %>
              <div>
                <h2><%= cart.errors.count %>件のエラーが発生しました。</h2>
                <ul>
                <% cart.errors.full_messages.each do |message| %>
                  <li>error</li>
                  <li><%= message %></li>
                <% end %>
                </ul>
              </div>
            <% end %>
            <%= f.text_field :item_count, :value => cart.item_count %>
            <%= f.submit "変更" %>
          <% end %>
        </td>
        <td><%= cart.item_count*tax(cart.item.non_taxed_price) %></td>
        <td>
          <%= link_to "削除する", cart_path(cart), method: :delete, data: {confirm: "#{cart.item.name}を削除します。本当に削除してもよろしいですか？"}, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "買い物を続ける", root_path, class: "btn btn-primary" %>
<table class="table">
  <tr>
    <th class="active">合計金額</th>
    <td><%= amount(@carts) %></td>
  </tr>
</table>
<%= link_to "情報入力に進む", new_order_path, class: "btn btn-success" %>