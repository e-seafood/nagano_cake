  <div class="row">
    <div class=" sign-up col-xs-offset-1 col-xs-11">
      <h3 class="sign-up1">新規会員登録</h3>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "publics/devise/shared/error_messages", resource: resource %>

      <table class="table" id="table-borderless">
        <tbody>
          <tr>
            <td><%= f.label :"名前"%></td>
            <td><%= f.label :"(姓)"%></td>
            <td><%= f.text_field :last_name ,autofocus: true %></td>
            <td><%= f.label :"(名)" %></td>
            <td><%= f.text_field :first_name %></td>
          </tr>

          <tr>
            <td><%= f.label :"フリガナ" %></td>
            <td><%= f.label :"(セイ)" %></td>
            <td><%= f.text_field :last_name_kana %></td>
            <td><%= f.label :"(メイ)" %></td>
            <td><%= f.text_field :first_name_kana %></td>
          </tr>

          <tr>
            <td><%= f.label :"メールアドレス" %></td>
            <td></td>
            <td><%= f.email_field :email, autocomplete: "email" %></td>
          </tr>

          <tr>
            <td><%= f.label :"郵便番号(ハイフンなし)" %></td>
            <td></td>
            <td><%= f.text_field :postcode %></td>
          </tr>

          <tr>
            <td><%= f.label :"住所" %></td>
            <td></td>
            <td colspan="4"><%= f.text_field :address,size:60 %></td>
          </tr>

          <tr>
            <td><%= f.label :"電話番号(ハイフンなし)" %></td>
            <td></td>
            <td><%= f.text_field :tel %></td>
          </tr>

          <tr>
            <td><%= f.label :"パスワード(6文字以上)" %></td>
            <td></td>
            <% if @minimum_password_length %>
            <% end %>
            <td><%= f.password_field :password, autocomplete: "new-password" %></td>
          </tr>

          <tr>
            <td><%= f.label :"パスワード(確認用)" %></td>
            <td></td>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
          </tr>

          <tr>
            <td></td>
            <td></td>
            <td><%= f.submit "新規登録" ,class:"btn btn-success col-xs-8" %></td>
          </tr>
        </tbody>
      </table>
      <% end %>

      <%= render "publics/devise/shared/links" %>
    </div>
  </div>