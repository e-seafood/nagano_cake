<h2>新規会員登録</h2>
  <div class="row">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "publics/devise/shared/error_messages", resource: resource %>
    <table class="table" id="table-borderless">
      <thead>
        <tr>
          <th></th>
          <th></th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      <tr>
        <td><%= f.label :"名前" %></td>
        <td><%= f.label :"(姓)"%></td>
        <td><%= f.text_field :last_name %></td>
        <td><%= f.label :"(名)" %></td>
        <td><%= f.text_field :first_name %></td>
      </tr>

      <tr>
        <td><%= f.label :"フリガナ", class: "" %></td>
        <td><%= f.label :"(セイ)", class: "" %></td><td><%= f.text_field :last_name_kana, class: "" %></td>
        <td><%= f.label :"(メイ)", class: "" %></td><td><%= f.text_field :first_name_kana, class: "" %></td>
      </tr>

      <tr>
        <td><%= f.label :"メールアドレス", class: "" %></td>
        <td></td>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
      </tr>

      <tr>
        <td><%= f.label :"郵便番号(ハイフンなし)", class: "" %></td>
        <td></td>
        <td><%= f.text_field :postcode, class: "" %></td>
      </tr>

      <tr>
        <td><%= f.label :"住所", class: "" %></td>
        <td></td>
        <td colspan="4"><%= f.text_field :address,size:60 %></td>
      </tr>

      <tr>
        <td><%= f.label :"電話番号(ハイフンなし)", class: "" %></td>
        <td></td>
        <td><%= f.text_field :tel, class: "" %></td>
      </tr>

      <tr>
        <td><%= f.label :"パスワード(6文字以上)" %></td>
        <td></td>
          <% if @minimum_password_length %>
          <% end %>
        <td><%= f.password_field :password, autocomplete: "new-password" %></td>
      </tr>

      <tr>
        <td><%= f.label :"パスワード(確認用)" %></td>
        <td></td>
        <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
      </tr>

      <tr>
        <td></td>
        <td colspan="4"><%= f.submit "新規登録" ,class:"btn btn-success col-xs-4" %></td>
      </tr>
    </tbody>
    </table>
  <% end %>

<%= render "publics/devise/shared/links" %>
</div>

