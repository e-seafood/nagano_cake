  <div class="row">
    <div class ="session1 col-xs-offset-1 col-xs-11">
<h2 class="passedit">パスワード変更画面</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "publics/devise/shared/error_messages", resource: resource %>

  <div class="form-group col-md-9">
    <%= f.label :"新しいパスワード" ,class: "col-sm-4 control-label text-center"%> 
    <%= f.password_field :password, autocomplete: "new-password",class: "col-sm-8 form-control-static" %>
    <% if @minimum_password_length %>

    <% end %>
  </div>

  <div class="form-group col-md-9">
    <%= f.label :"新しいパスワード確認" ,class: "col-sm-4 control-label text-center" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" ,class: "col-sm-8 form-control-static" %>
  </div>

  <div class="form-group col-md-9">
    <%= f.label :"現在のパスワード" ,class: "col-sm-4 control-label text-center"%> 
    <%= f.password_field :current_password, autocomplete: "current-password" ,class: "col-sm-8 form-control-static" %>
  </div>


  <div class="form-group col-md-9">
    <%= f.submit "Update" ,class:"btn btn-success col-md-offset-4 col-md-8"  %>
  </div>
<% end %>
</div>
</div>
