<h2>注文履歴詳細</h2>
<div>
  <% if @order.present? %>
			<strong>注文情報</strong>
				<table class="table table-bordered">
          <tbody>
              <tr class="active">
                <th>注文日</th>
								<td><%= l @order.created_at, format: :short %></td>
              </tr>
              <tr>
								<th>配送先</th>
                <td><%= @order.postcode %><br>
									<%= @order.address %><br>
									<%= @order.name %>
                </td>
              </tr>
              <tr>
								<th>支払方法</th>
                <td><%= @order.payment %></td>
              </tr>
              <tr>
                <th>ステータス</th>
                <td><%= @order.status %></td>
              </tr>
          </tbody>
        </table>
		</div>

    <div>
      <strong>請求情報</strong>
				<table class="table table-bordered">
            <tr class="active">
              <th>商品合計</th>
              <td><%= items_total(@order_items).to_s(:delimited) %>円</td>
            </tr>
            <tr>
              <th>配送料</th>
              <td><%= post_age %>円</td>
            </tr>
            <tr>
              <th>ご請求金額</th>
              <td><%= amount(@order_items).to_s(:delimited) %>円</td>
            </tr>
        </table>
    </div>
    <div>
			<strong>注文内容</strong>
        <table class="table table-bordered">
					<thead>
					<tr class="active">
						<th>商品</th>
						<th>単価(税込)</th>
						<th>個数</th>
						<th>小計</th>
					</tr>
					</thead>
					<tbody>
					<% @order.order_items.each do |order_item| %>
            <tr>
							<td><%= order_item.item.name %></td>
							<td><%= tax(order_item.item.non_taxed_price).to_s(:delimited) %>円</td>
							<td><%= order_item.item_count %></td>
							<td><%= sub_total(order_item).to_s(:delimited) %>円</td>
            </tr>
          <% end %>
          </tbody>
        </table>
    </div>
  <% else %>
    <p>注文履歴がありません。</p>
  <% end %>
</div>