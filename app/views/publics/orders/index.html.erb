<h2>注文一覧画面</h2>
      <% if @orders.present? %>
        <table>
          <thead>
            <tr>
              <th>注文日</th>
              <th>配送先</th>
              <th>注文商品</th>
              <th>支払金額</th>
              <th>ステータス</th>
              <th>注文詳細</th>
            </tr>
          </thead>
          <tbody>
            <% @orders.each do |order| %>
              <tr>
                <td>
                  <%= l order.created_at, format: :short %>
								</td>
								<td>
									<%= order.postcode %><br>
									<%= order.address %><br>
									<%= order.name %>
								</td>
								<td>
									<% order.order_items.each do |order_item| %>
										<%= order_item.item.name %><br>
									<% end %>
								</td>
								<td>
									<%= order.amount.to_s(:delimited) %>円
								</td>
								<td>
									<%= order.status %>
								</td>
								<td>
									<%= link_to "注文詳細", order_path(order) %>
								</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p>注文履歴がありません。</p>
      <% end %>
