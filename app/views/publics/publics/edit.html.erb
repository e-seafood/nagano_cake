<div class = "row">
   <div class =" sign-edit col-xs-offset-1 col-xs-11">
<h2 class="page-title">登録情報編集</h2>
    <%= form_with(model:current_public, url:update_publics_path, local: true ,method: :patch) do |f| %>

      <table class="table" id="table-borderless">
      <tbody>
      <tr>
        <td><%= f.label :"名前" %></td>
        <td><%= f.label :"(姓)" %></td>
        <td><%= f.text_field :last_name %></td>
        <td><%= f.label :"(名)" %></td>
        <td><%= f.text_field :first_name %></td>
      </tr>

      <tr>
        <td><%= f.label :"フリガナ" %></td>
        <td><%= f.label :"(セイ)"%></td>
        <td><%= f.text_field :last_name_kana %></td>
        <td><%= f.label :"(メイ)"%></td>
        <td><%= f.text_field :first_name_kana %></td>
      </tr>

      <tr>
        <td><%= f.label :"メールアドレス"%></td>
        <td></td>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
      </tr>

      <tr>
        <td><%= f.label :"郵便番号(ハイフンなし)"%></td>
        <td></td>
        <td><%= f.text_field :postcode%></td>
      </tr>

      <tr>
        <td><%= f.label :"住所"%></td>
        <td></td>
        <td colspan="3"><%= f.text_field :address,size:60 %></td>
      </tr>

      <tr>
        <td><%= f.label :"電話番号(ハイフンなし)"%></td>
        <td></td>
        <td><%= f.text_field :tel%></td>
      </tr>
    </tbody>
  </table>

  <%= f.submit "編集内容を保存する", class: "btn btn-primary col-md-offset-4 col-md-3" %>
  <%= link_to "退会する",  unsubscribe_publics_path, class: "btn btn-danger col-md-offset-2 col-md-1"%>
      
  <% end %>
  </div>
  </div>
