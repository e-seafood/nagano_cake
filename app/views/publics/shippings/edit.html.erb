<div class="edit-shipping">
  <div class="container">
    <div class="row">
      <div class="col-sm-offset-1 col-sm-6">
        <br><div class="headline"><h2>配送先編集</h2></div>
      </div>
    </div>
  </div>

  <% if @shipping.errors.any? %>
    <div id="error_explanation">
      <h2><%= @shipping.errors.count %>件のエラーが発生しました。</h2>
      <ul>
        <% @shipping.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

    <table>
    	<%= form_for(@shipping) do |f| %>
          <tr>
          	<td><%= f.label :postcode, "郵便番号(ハイフンなし)" %></td>
		    <td><%= f.text_field :postcode %></td>
		</tr>

        <tr>
		    <td><%= f.label :address, "住所" %></td>
		    <td><%= f.text_field :address, :size => 60 %></td>
		</tr>

		<tr>
		    <td><%= f.label :name, "宛名" %></td>
		    <td><%= f.text_field :name %></td>
		    <td><%= f.submit '編集する',class:"btn btn-primary" %></td>
		</tr>
	    <% end %>
	</table>
</div>


