<div class="main">
	<div class="container">
		<div class="row">
			<div class="col-sm-offset-1 col-sm-6">
				<br><div class="headline"><h2>配送先登録/一覧</h2></div>
			</div>
		</div>
	</div>

	<% if @shipping.errors.any? %>
	  <div id="error_explanation">
	  		<% @shipping.errors.full_messages.each do |message| %>
	  		  <li><%= message %></li>
	  		<% end %>
	  </div>
	<% end %>


  <table>
    <%= form_for(@shipping) do |f| %>
	  <tr>
		<td><%= f.label :postcode, "郵便番号(ハイフンなし)" %></td>
		<td><%= f.text_field :postcode %></td>
	  </tr>
	  <tr>
		<td><%= f.label :address, "住所" %></td>
		<td><%= f.text_field :address, :size => 60 %></td>
	  </tr>
	  <tr>
		<td><%= f.label :name, "宛名" %></td>
		<td><%= f.text_field :name %></td>
		<td><%= f.submit '登録',class:"btn btn-success" %></td>
	  </tr>
    <% end %>
  </table>

<div class="container">
	<table class="table table-bordered">
		<thead>
			<tr>
				<th>郵便番号</th>
				<th>住所</th>
				<th>宛名</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% @shippings.each do |shipping| %>
			  <tr class="new table">
			  	<td><%= shipping.postcode %></td>
			  	<td><%= shipping.address %></td>
			  	<td><%= shipping.name %></td>
			  	<td><%= link_to '編集する', edit_shipping_path(shipping),class:"btn btn-primary" %>
				    <%= link_to '削除する', shipping_path(shipping), method: :delete, "data-confirm" => "本当に消しますか？",class:"btn btn-danger" %>
				</td>
			  </tr>
			<% end %>
		</tbody>
    </table>
</div>
