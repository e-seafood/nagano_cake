
<h2>商品登録/一覧</h2>
  <table>
    <%= form_for(@shipping) do |f| %>
	  <tr>
		<td><%= f.label :postcode, "郵便番号(ハイフンなし)" %></td>
		<td><%= f.text_field :postcode %></td>
	  </tr>
	  <tr>
		<td><%= f.label :address, "住所" %></td>
		<td><%= f.text_field :address, :size => 60 %></td>
	  </tr>
	  <tr>
		<td><%= f.label :name, "宛名" %></td>
		<td><%= f.text_field :name %></td>
		<td><%= f.submit '登録',class:"btn btn-success" %></td>
	  </tr>
    <% end %>
  </table>

<table>
	<thead>
		<tr>
			<th></th>
			<th>郵便番号</th>
			<th>住所</th>
			<th>宛名</th>
		</tr>
	</thead>
	<tbody>
		<% @shippings.each do |shipping| %>
		  <tr class="new table">
		  	<td><%= shipping.postcode %></td>
		  	<td><%= shipping.address %></td>
		  	<td><%= shipping.name %></td>
		  	<td><%= link_to '編集する', edit_shipping_path(shipping) %></td>
			<td><%= link_to '削除する', shipping_path(shipping), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
		  </tr>
		<% end %>
	</tbody>
</table>